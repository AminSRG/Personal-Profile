@model SkillViewModels
@{
    Layout = null;
}

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">حـذف توانایی </h3>
    </div>
    <form role="form" method="post" asp-area="Admin" asp-controller="Skill" asp-action="Delete">
        <div class="box-body">
            <div class="form-group col-md-6">
                <label asp-for="ID" class="control-label"></label>
                <input asp-for="ID" class="form-control" />
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Percent"></label>
                <input asp-for="Percent" class="form-control" />
                <span asp-validation-for="Percent" class="text-danger"></span>
            </div>
        </div>
        <div style="position:center" class="box-footer">
            <button type="submit" class="btn btn-danger btn-lg" style="min-width:150px">حــذف</button>
        </div>
    </form>
</div>